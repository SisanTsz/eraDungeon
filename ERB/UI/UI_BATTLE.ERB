@BATTLE_MESSAGE
    #DIM LCOUNT 
    #DIMS PRE
    #DIM LNUM 
    LNUM = 10
    FOR LCOUNT, 0, LNUM
        PRE = BATTLEMESSAGE%TOSTR(LCOUNT+1)%
        PRINTFORML %STR:PRE%
    NEXT
    PRINTL
    CUSTOMDRAWLINE - 

@BATTLE_MESSAGE_PUSH(ARGS)
    #DIM WNUM
    #DIM LNUM
    #DIM WNO = 0
    #DIM LCOUNT
    #DIMS PRE 
    #DIMS PRE_1
    SPLIT ARGS, "`", LOCALS
    WNO = 0
    LNUM = 10
    WNUM = RESULT
    FOR LCOUNT, 100, WNUM, -1
        PRE = BATTLEMESSAGE%TOSTR(LCOUNT)%
        PRE_1 = BATTLEMESSAGE%TOSTR(LCOUNT - WNUM)%
        STR:PRE = %STR:PRE_1%
    NEXT
    FOR LCOUNT, 1, WNUM + 1
        PRE = BATTLEMESSAGE%TOSTR(LCOUNT)%
        STR:PRE = %LOCALS:(LCOUNT - 1)%
    NEXT
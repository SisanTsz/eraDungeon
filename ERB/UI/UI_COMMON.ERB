@TITLE_BAR(ARGS)
    CUSTOMDRAWLINE -
    ALIGNMENT CENTER
    PRINTFORML %ARGS%
    ALIGNMENT LEFT
    CUSTOMDRAWLINE -


@PRINT_BUTTON(ARGS,ARG:0,ARG:1)
    LOCALS = %"["%%LEN_STR(ARGS,ARG:0)%%"]"%
    IF ARG:1 != 0
        PRINTBUTTON LOCALS, ARG:1
    ELSE
        PRINTFORM %LOCALS%
    ENDIF

@PRINT_BUTTON_SELECTED(ARGS,ARG)
    LOCALS = %"["%%LEN_STR(ARGS,ARG)%%"]"%
    GETFOCUSCOLOR
    SETCOLOR RESULT
    PRINTFORM %LOCALS%
    RESETCOLOR
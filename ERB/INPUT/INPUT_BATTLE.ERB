@INPUT_BATTLE
    #DIM LCOUNT
    #DIMS PRE 
    SELECTCASE RESULT
        CASE 1 TO 10
            FLAG:选择技能 = RESULT
        CASE 1000 TO 1004
            PRE = TEAMMEMBER%TOSTR(RESULT - 1000)%
            FLAG:选择对象 = FLAG:PRE
            FLAG:进行回合 = 1
            TRYCALLFORM BATTLE_SKILL_{CHARA_TO_NO(FLAG:行动角色)}(SKILL_TO_NO(FLAG:行动角色,FLAG:选择技能))
        CASE 1010 TO 1014
            PRE = ENEMYMEMBER%TOSTR(RESULT - 1010)%
            FLAG:选择对象 = FLAG:PRE
            FLAG:进行回合 = 1
            TRYCALLFORM BATTLE_SKILL_{CHARA_TO_NO(FLAG:行动角色)}(SKILL_TO_NO(FLAG:行动角色,FLAG:选择技能))
    ENDSELECT
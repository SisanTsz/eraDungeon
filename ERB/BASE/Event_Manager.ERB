@Trigger_Event(event_enum, eventObj)
    #DIMS event_enum
    #DIMS eventObj

    REPEAT VARSIZE(EventName)
        IF EventName:COUNT != ""
            CONTINUE
        ELSE
            EventName:COUNT = event_enum
            EventObj:COUNT = eventObj
            RETURN
        ENDIF
    REND

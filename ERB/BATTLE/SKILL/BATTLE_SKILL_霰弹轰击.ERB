		RESULTS:2 = 暴击率:{BATTLE_CHARA_DATA(chara_ID,"暴击率")}%"%"%
		RESULTS:3 = 命中:{BATTLE_CHARA_DATA(chara_ID,"命中")}
		RESULTS:4 = 

	CASE "读取"
		SKILL_OBJ:skill_ID:INDEX("名称")			= 霰弹轰击
		SKILL_OBJ:skill_ID:INDEX("标签")			= 物理,打击
		SKILL_OBJ:skill_ID:INDEX("位置要求")		= -1,-2
		SKILL_OBJ:skill_ID:INDEX("可选对象")		= 1,2
		SKILL_NUM:skill_ID:INDEX("效果范围")		= 所有
		SKILL_NUM:skill_ID:INDEX("物理伤害系数")	= 50
		SKILL_NUM:skill_ID:INDEX("暴击率修正")		= -10

	CASEELSE
ENDSELECT
RETURN
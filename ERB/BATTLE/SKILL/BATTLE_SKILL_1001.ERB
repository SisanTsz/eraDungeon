@BATTLE_SKILL_1001(skill_ID, method)
#DIMS skill_ID
#DIMS method

SELECTCASE method
	CASE "描述"
		VARSET RESULTS
		RESULTS:0 = 物理攻击x100%, 前进1
		RESULTS:1 = 物理攻击:{BATTLE_CHARA_DATA(1,"物理攻击")}
		RESULTS:2 = 暴击率:{BATTLE_CHARA_DATA(1,"暴击率")}%"%"%
		RESULTS:3 = 命中:{BATTLE_CHARA_DATA(1,"命中")}
		RESULTS:4 = 

	; 用于初始化的静态数据
	; 不是所有字段都必填，比如技能没有位移，就可以不配置这一行，运行时会FINDELEMENT，如果找不到就判定为没有位移
	; 技能就像用积木拼装起来一样
	CASE "读取"
		; 技能名
		SKILL_LIB_NAME:skill_ID							= 快门
		; 技能标签，用于做各种判断
		SKILL_LIB_TAG:skill_ID							= 物理,单体,前进
		; 一场战斗内，技能的可用次数，约定-1为无限
		SKILL_LIB_VAR:skill_ID:INDEX("可用次数")		= -1
		; 约定负数为友方，正数为敌方
		SKILL_LIB_VAR:skill_ID:INDEX("合法目标")		= 1,2,3
		; 先只考虑两种情况：单体，所有
		SKILL_LIB_VAR:skill_ID:INDEX("效果范围")		= 单体
		; 物理攻击伤害系数，单位是百分比
		SKILL_LIB_VAR:skill_ID:INDEX("物理系数")		= 100
		; 命中率修正系数，单位是百分比，做加算
		SKILL_LIB_VAR:skill_ID:INDEX("命中修正")		= 0
		; 暴击率修正系数，单位是百分比，做加算
		SKILL_LIB_VAR:skill_ID:INDEX("暴击修正")		= 0
		; 技能是否产生位移，正数为向前排移动
		SKILL_LIB_VAR:skill_ID:INDEX("位移")			= 1

	CASEELSE
ENDSELECT
RETURN
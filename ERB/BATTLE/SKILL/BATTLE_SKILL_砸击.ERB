@BATTLE_SKILL_1004(skill_ID, method, chara_ID = 0)
#DIM skill_ID
#DIM chara_ID
#DIMS method

SELECTCASE method
	CASE "描述"
		VARSET RESULTS
		RESULTS:0 = 这是一行描述！
		RESULTS:1 = 物理攻击:{BATTLE_CHARA_DATA(chara_ID,"物理攻击")}
		RESULTS:2 = 暴击率:{BATTLE_CHARA_DATA(chara_ID,"暴击率")}%"%"%
		RESULTS:3 = 命中:{BATTLE_CHARA_DATA(chara_ID,"命中")}
		RESULTS:4 = 

	CASE "读取"
		SKILL_OBJ:skill_ID:INDEX("名称")			= 砸击
		SKILL_OBJ:skill_ID:INDEX("标签")			= 物理,打击
		SKILL_OBJ:skill_ID:INDEX("位置要求")		= -1,-2
		SKILL_OBJ:skill_ID:INDEX("可选对象")		= 1,2,3
		SKILL_NUM:skill_ID:INDEX("效果范围")		= 单体
		SKILL_NUM:skill_ID:INDEX("物理伤害系数")	= 70
		SKILL_NUM:skill_ID:INDEX("暴击率修正")		= 5

	CASEELSE
ENDSELECT
RETURN
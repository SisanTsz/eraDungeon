@BATTLE_CHECK_LOCATION(ARG:0,ARG:1,ARG:2,ARG:3,ARG:4) ;角色, 位置1/2/3/4
    #FUNCTIONS
    #DIM LCOUNT
    LOCAL = 0
    FOR LCOUNT, 1, 5
        IF ARG:LCOUNT != 0
            IF CFLAG:(ARG:0):TEAMMEMBER == ARG:LCOUNT
                LOCAL = 1
                BREAK
            ENDIF
        ENDIF
    NEXT
    RETURNF LOCAL

@BATTLE_CHECK_ENEMY_LOCATION(ARG:0,ARG:1,ARG:2,ARG:3,ARG:4) ;角色, 位置1/2/3/4
    #FUNCTIONS
    #DIM LCOUNT
    #DIMS PRE
    LOCAL = 0
    IF CFLAG:(ARG:0):TEAM == 1
        FOR LCOUNT, 1, 5
            IF ARG:LCOUNT != 0
                PRE = ENEMYMEMBER%TOSTR(ARG:LCOUNT)%
                IF FLAG:PRE != 0
                    LOCAL = 1
                    BREAK
                ENDIF
            ENDIF
        NEXT
    ELSEIF CFLAG:(ARG:0):TEAM == 2
        FOR LCOUNT, 1, 5
            IF ARG:LCOUNT != 0
                PRE = TEAMMEMBER%TOSTR(ARG:LCOUNT)%
                IF FLAG:PRE != 0
                    LOCAL = 1
                    BREAK
                ENDIF
            ENDIF
        NEXT
    ENDIF
    RETURNF LOCAL

@BATTLE_CHECK_TEAM_LOCATION(ARG:0,ARG:1,ARG:2,ARG:3,ARG:4) ;角色, 位置1/2/3/4
    #FUNCTIONS
    #DIM LCOUNT
    #DIMS PRE
    LOCAL = 0
    IF CFLAG:(ARG:0):TEAM == 1
        FOR LCOUNT, 1, 5
            IF ARG:LCOUNT != 0

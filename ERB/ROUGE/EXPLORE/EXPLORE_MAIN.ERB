@EXPLORE_START
    SELECTCASE FLAG:难度
        CASE 1
            FLAG:章节 = 1
            FLAG:节点 = 1
            FLAG:目标章节 = 1
            FLAG:目标节点 = 5
    ENDSELECT
    CALL EXPLORE_ROOM
    ;CALL EXPLORE_RANDOM

@EXPLORE_RANDOM
    #DIM LCOUNT
    FOR LCOUNT, 1, 4
        IF EXPLORE_ROOM_NUM:LCOUNT:INDEX_EXPLORE("类型") == 事件
            CALL EXPLORE_EVENT_RANDOM(LCOUNT)
        ELSEIF EXPLORE_ROOM_NUM:LCOUNT:INDEX_EXPLORE("类型") == 战斗
            CALL EXPLORE_BATTLE_RANDOM(LCOUNT)
        ENDIF
    NEXT
@EXPLORE_EVENT_0(event_ID, method)
    #DIM event_ID
    #DIMS method
    SELECTCASE method
        ;应该是类似备注的东西?
        CASE "描述"
            VARSET RESULTS
            RESULTS:0 = 这是一个测试事件
        CASE "读取"
            ;事件名
            EXPLORE_ROOM_OBJ:event_ID:INDEX_EXPLORE("名字")     = 上锁宝箱
            EXPLORE_ROOM_NUM:event_ID:INDEX_EXPLORE("类型")     = 事件
            EXPLORE_ROOM_NUM:event_ID:INDEX_EXPLORE("类型2") = 固定事件
            EXPLORE_ROOM_OBJ:event_ID:INDEX_EXPLORE("引述") = 前面好像有个宝箱
